{
  "manifest_version": 2,
  "name": "Passw0rd1ess",
  "short_name": "Passw0rd1ess",
  "description": "",
  "version": "0.0.1",
  "minimum_chrome_version": "38",
  "icons": {
    "16": "assets/icon_16.png",
    "128": "assets/icon_128.png"
  },
  "externally_connectable": {
     "matches": ["*://*.yahoo.com/*"]
   },
  "content_scripts":  [
    {
      "matches": ["*://*.yahoo.com/*"],
      "js": ["jquery.js", "initiate_code.js"]
    }
  ],
  "page_action" : {
    "default_icon" : "assets/icon_16.png",
    "default_title": "bluetooth"
  },
  "background": {
      "scripts": ["background.js"]
    }
}
